@model List<ErasmusPlus.Models.ViewModels.Admin.UserViewModel>
@{
    ViewBag.Title = "Students";
}
<div class="row">
    <div class="box">
        <div class="box-header with-border">
            <h3> Students </h3>
        </div>
        <div class="box-body">
            <table class="table table-bordered">
                <thead>
                <tr>
                    <th>Student ID</th>
                    <th>Personal code</th>
                    <th>First name</th>
                    <th>Last name</th>
                    <th>Username</th>
                    <th>Email</th>
                    <th>Actions</th>
                </tr>
                </thead>
                <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.StudentId</td>
                        <td>@item.PersonalCode</td>
                        <td>@item.FirstName</td>
                        <td>@item.LastName</td>
                        <td>@item.Username</td>
                        <td>@item.Email</td>
                        <td>
                            @*@Html.ActionLink("Edit", "EditStudent", "Coordinator", new {userId = item.UserId}, new {@class = "btn btn-primary"})
                            *@   @Html.ActionLink("Delete", "DeleteStudent", "Coordinator", new { userId = item.UserId }, new { @class = "btn btn-warning" })
                        </td>
                    </tr>
                }
                </tbody>
            </table>
        </div>
    </div>
</div>