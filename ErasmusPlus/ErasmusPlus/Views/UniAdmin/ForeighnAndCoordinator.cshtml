@model List<ErasmusPlus.Models.ViewModels.Admin.UserViewModel>
@{
    ViewBag.Title = "Foreign and coordinator users";
}
<div class="row">
    <div class="box">
        <div class="box-header with-border">
            <h3> Foreign and coordinator users </h3>
        </div>
        <div class="box-body">
            <table class="table table-bordered">
                <thead>
                <tr>
                    <th>Personal code</th>
                    <th>First name</th>
                    <th>Last name</th>
                    <th>Username</th>
                    <th>Email</th>
                    <th>Role</th>
                    <th>Actions</th>
                </tr>
                </thead>
                <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.PersonalCode</td>
                        <td>@item.FirstName</td>
                        <td>@item.LastName</td>
                        <td>@item.Username</td>
                        <td>@item.Email</td>
                        <td>@item.RoleName</td>
                        <td>
                            @*@Html.ActionLink("Edit", item.RoleName == "Foreign" ? "EditForeign" : "EditCoordinator", "UniAdmin", new {userId = item.UserId}, new {@class = "btn btn-primary"})*@
                            @Html.ActionLink("Delete", item.RoleName == "Foreign" ? "DeleteForeign" : "DeleteCoordinator", "UniAdmin", new { userId = item.UserId }, new { @class = "btn btn-warning" })
                        </td>
                    </tr>
                }
                </tbody>
            </table>
        </div>
    </div>
</div>